<!-- Form follower start -->
<%= form_with(model: @follower, local: true) do |f| %>
<!-- Form follower end -->

  <!-- Label and input for follower_id start -->
  <div class="form-group">
    <%= f.label :follower_id %>

    <!-- Input for follower_id start -->
    <%= f.text_field :follower_id, class: "form-control" %>
    <!-- Input for follower_id end -->
  </div>
  <!-- Label and input for follower_id end -->

  <!-- Label and input for receiver_id start -->
  <!-- Input for receiver_id start -->
  <%= f.hidden_field :receiver_id, value: @user.id %>
  <!-- Input for receiver_id end -->
  <!-- Label and input for receiver_id end -->

  <%= f.submit "Create follower", class: "btn btn-block btn-outline-secondary" %>
<% end %>
