<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Followers

    <a data-toggle="collapse" href="#user_followers_new_form">
      Add follower
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.followers.each do |follower| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to follower, follower %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to follower, method: :delete, data: { confirm: "Do you really want to delete this follower" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_followers_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
