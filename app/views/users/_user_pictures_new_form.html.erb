<!-- Form picture start -->
<%= form_with(model: @picture, local: true) do |f| %>
<!-- Form picture end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>

    <!-- Input for description start -->
    <%= f.text_field :description, class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for photo start -->
  <div class="form-group">
    <%= f.label :photo %>

    <!-- Input for photo start -->
    <%= f.file_field :photo, class: "form-control" %>
    <!-- Input for photo end -->
  </div>
  <!-- Label and input for photo end -->

  <!-- Label and input for photo_owner start -->
  <!-- Input for photo_owner start -->
  <%= f.hidden_field :photo_owner, value: @user.id %>
  <!-- Input for photo_owner end -->
  <!-- Label and input for photo_owner end -->

  <!-- Label and input for place start -->
  <div class="form-group">
    <%= f.label :place %>

    <!-- Input for place start -->
    <%= f.text_field :place, class: "form-control" %>
    <!-- Input for place end -->
  </div>
  <!-- Label and input for place end -->

  <%= f.submit "Create picture", class: "btn btn-block btn-outline-secondary" %>
<% end %>
