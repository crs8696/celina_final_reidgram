<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Tags

    <a data-toggle="collapse" href="#user_tags_new_form">
      Add tag
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.tags.each do |tag| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to tag, tag %>

        <%= link_to tag, method: :delete, data: { confirm: "Do you really want to delete this tag" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_tags_new_form">
        <%= render partial: "users/user_tags_new_form" %>
      </div>
    </div>

  </ul>
</div>
