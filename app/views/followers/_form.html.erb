<% was_validated = follower.errors.any? %>

<%= form_with(model: follower, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for follower_id start -->
  <div class="form-group">
    <% follower_class = "form-control" %>
    <% follower_was_invalid = follower.errors.include?(:follower) %>

    <% if was_validated %>
      <% if follower_was_invalid %>
        <% follower_class << " is-invalid" %>
      <% else %>
        <% follower_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :follower_id %>
    <!-- Input for follower_id start -->
    <%= f.number_field :follower_id, class: follower_class, placeholder: "Enter follower" %>
    <!-- Input for follower_id end -->
    <% if follower_was_invalid %>
      <% follower.errors.full_messages_for(:follower).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for follower_id end -->
  <!-- Label and input for receiver_id start -->
  <div class="form-group">
    <% receiver_class = "form-control" %>
    <% receiver_was_invalid = follower.errors.include?(:receiver) %>

    <% if was_validated %>
      <% if receiver_was_invalid %>
        <% receiver_class << " is-invalid" %>
      <% else %>
        <% receiver_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :receiver_id %>
    <!-- Input for receiver_id start -->
    <%= f.number_field :receiver_id, class: receiver_class, placeholder: "Enter receiver" %>
    <!-- Input for receiver_id end -->
    <% if receiver_was_invalid %>
      <% follower.errors.full_messages_for(:receiver).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for receiver_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
