<div class="card mb-3">
  <h2 class="card-header h4">
    Follower #<%= follower.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Follower</dt>
      <!-- Display follower_id start -->
      <dd><%= follower.follower_id %></dd>
      <!-- Display follower_id end -->

      <dt>Receiver</dt>
      <!-- Display receiver_id start -->
      <dd><%= follower.receiver_id %></dd>
      <!-- Display receiver_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back follower, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link follower start -->
      <div class="col">
        <%= link_to edit_follower_url(follower), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link follower end -->

      <!-- Delete link follower start -->
      <div class="col">
        <%= link_to follower, method: :delete, data: { confirm: "Do you really want to delete this follower?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link follower end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(follower.updated_at) %> ago
  </div>
</div>
