<%= search_form_for @q, :class => collapse_search_form, :id => "pictures_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :photo_uploader_email_address_cont, "Photo uploader email_address contains" %>
    <%= f.text_field :photo_uploader_email_address_cont, :class => "form-control", :placeholder => "Photo uploader email_address contains" %>
  </div>

  <div class="form-group">
    <%= f.label :comments_comment_content_cont, "Comments comment_content contains" %>
    <%= f.text_field :comments_comment_content_cont, :class => "form-control", :placeholder => "Comments comment_content contains" %>
  </div>

  <div class="form-group">
    <%= f.label :comment_givers_email_address_cont, "Comment givers email_address contains" %>
    <%= f.text_field :comment_givers_email_address_cont, :class => "form-control", :placeholder => "Comment givers email_address contains" %>
  </div>

  <div class="form-group">
    <%= f.label :viewers_email_address_cont, "Viewers email_address contains" %>
    <%= f.text_field :viewers_email_address_cont, :class => "form-control", :placeholder => "Viewers email_address contains" %>
  </div>

  <div class="form-group">
    <%= f.label :users_email_address_cont, "Users email_address contains" %>
    <%= f.text_field :users_email_address_cont, :class => "form-control", :placeholder => "Users email_address contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/pictures" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#pictures_filters">
  Show filters
</a>
