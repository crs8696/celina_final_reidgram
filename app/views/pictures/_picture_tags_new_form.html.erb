<!-- Form tag start -->
<%= form_with(model: @tag, local: true) do |f| %>
<!-- Form tag end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <%= f.label :user_id %>

    <!-- Input for user_id start -->
    <%= f.text_field :user_id, class: "form-control" %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for photo_id start -->
  <!-- Input for photo_id start -->
  <%= f.hidden_field :photo_id, value: @picture.id %>
  <!-- Input for photo_id end -->
  <!-- Label and input for photo_id end -->

  <%= f.submit "Create tag", class: "btn btn-block btn-outline-secondary" %>
<% end %>
