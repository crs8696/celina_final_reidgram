<div class="card mb-3">
  <h2 class="card-header h4">
    Picture #<%= picture.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Description</dt>
      <dd><%= picture.description %></dd>

      <dt>Photo</dt>
      <dd>
        <%= cl_image_tag @picture.photo, class: "img-fluid" %>
      </dd>

      <dt>Photo owner</dt>
      <dd>
        <% if @picture.photo_uploader.present? %>
          <%= link_to picture.photo_uploader, picture.photo_uploader %>
        <% end %>
      </dd>

      <dt>Place</dt>
      <dd>
        <div>
          <%= render partial: "pictures/one_photo_map" %>
        </div>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back picture, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_picture_url(picture), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to picture, method: :delete, data: { confirm: "Do you really want to delete this picture?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(picture.updated_at) %> ago
  </div>
</div>
